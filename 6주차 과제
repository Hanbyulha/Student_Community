#include<iostream>
#include<string>
using namespace std;
struct character {
	char name;
	int age;
	char job;
};
class GameCharacter{
	char name;
	int age;
	char job;
public:
	string formation();//캐릭터 생성함수
	void copy(const GameCharacter& Character);//캐릭터 복사함수
	string check();//캐릭터 정보확인 함수
	string revision();//캐릭터 정보 수정 함수
};
void GameCharacter::copy(const GameCharacter& Character); {
	this->age = Character.age;
	this->name = Character.name;
	this->job = Character.job;
}
int main() {
	int num;
	do {
		cout << "========캐릭터 관리========\n1. 캐릭터 생성\n2. 캐릭터 복사" << endl;
		cout << "3. 캐릭터 정보 확인\n4. 캐릭터 정보 수정\n5. 종료\n번호를 선택해주세요: ";
		cin >> num;
		switch (num)
		{
		case 1://캐릭터 생성
			break;
		case 2:// 캐릭터 복사
			break;
		case 3://캐릭터 정보확인
			break;
		case 4://캐릭터 정보 수정
			break;
		case 5://종료
			cout << "종료되었습니다." << endl;
			break;
		default:
			cout << "잘못된 입력입니다." << endl;
			break;
		}
	} while (num != 5);

}
